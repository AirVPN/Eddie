{
    "version": "0.2.0",
    "configurations": [        
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",            
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/linux-x64/eddie-cli",
            "args": [
                "path.tools=${workspaceFolder}/../../deploy/linux_{@arch}",
                "path.resources=${workspaceFolder}/../../resources",
                "path=home"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}